<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lable_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="18dp"
        android:text="weSwaap"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text__main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lable_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Spot Released!"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text__main_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Please define!"
        android:textSize="18sp" />

    <ViewStub
        android:id="@+id/include_layout_popup"
        layout="@layout/information_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_subtitle"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/view_map_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/include_layout_popup"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="26dp"
        android:text="View on map" />

    <Button
        android:id="@+id/cancel_btn_pop_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_map_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="19dp"
        android:text="Cancel" />

</RelativeLayout>